

<div class="flex w-full flex-wrap @flexDirection justify-center gap-4">
    @for (int i = 0; i < amount; i++) 
    {
        @* sm: my - 6 md: my - 8 xl: my - 12 *@
        <div class="my-4 w-72 sm:w-1/2 sm:h-40 md:w-1/3 lg:h-30 lg:px-12 @lgWidth">
            <div class="flex animate-pulse flex-col space-y-2 rounded-lg bg-gray-300 p-4 shadow-md">
                <div class="h-4 w-3/4 rounded bg-gray-400"></div>
                <div class="h-4 w-5/6 rounded bg-gray-400"></div>
                <div class="h-4 w-2/3 rounded bg-gray-400"></div>
            </div>
        </div>
    }
</div>

@code{
    [Parameter] public int amount { get; set; }
    [Parameter] public string? flexDirection { get; set; } = "flex-row";
    [Parameter] public string? lgWidth { get; set; } = "lg:w-1/3";


}