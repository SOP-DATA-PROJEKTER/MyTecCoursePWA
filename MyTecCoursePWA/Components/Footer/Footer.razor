@using MyTecCoursePWA.Layout

@inject NavigationManager Navigation

<div class="bottom-0 z-50 h-28 w-full border-t border-gray-300 bg-[var(--background-secondary)] text-[var(--text-color-secondary)]">
	<div class="container mx-auto flex h-full w-full flex-col items-center justify-center px-6 py-4">
		<p class="text-sm text-[var(--foreground)] md:text-xl lg:text-2xl xl:text-sm">
			© 2024 <span class="font-semibold text-[var(--text-color-secondary)]">TEC</span> | All Rights Reserved.
		</p>
		<div class="flex flex-col">
			<div class="hover-underline-single my-2 cursor-pointer text-sm font-bold uppercase transition hover:text-[var(--primary-color)] md:text-xl lg:text-2xl xl:text-sm">
				<div @onclick="() => HandleButtonClick(userDashboard)">
					Dashboard 1
				</div>
			</div>
			<div class="hover-underline-single my-2 cursor-pointer text-sm font-bold uppercase transition hover:text-[var(--primary-color)] md:text-xl lg:text-2xl xl:text-sm">
				<div @onclick="() => HandleButtonClick(userDashboard_Jv2)">
					Dashboard 2
				</div>
			</div>
		</div>
	</div>
</div>

@code {
	[CascadingParameter] public MainLayout Layout { get; set; }

	private string login = "/login";
	private string register = "/register";
	private string userDashboard = "/UserDashboard";
	private string userDashboard_Jv2 = "/UserDashboard_Jv2";
	private string home = "/";

	private async void HandleButtonClick(string link)
	{
		await LinkManagerService.LinkManagerHandler(link, Layout);
	}

}
